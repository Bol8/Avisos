<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/custom_root_layout"
              android:orientation="vertical"
              android:layout_width="350dp"
              android:layout_height="fill_parent"
              android:background="@color/amarillo"
              android:weightSum="2">

    <TextView
        android:id="@+id/custom_title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Nuevo Aviso:"
        android:layout_weight="0.04"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/custom_edit_reminder"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_margin="4dp"
        android:background="@color/gris_claro"
        android:gravity="start"
        android:textColor="@color/negro"
        android:ems="10"
        android:layout_weight="0.27">
        <requestFocus/>
        </EditText>

    <CheckBox
        android:id="@+id/custom_check_box"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_margin="4dp"
        android:background="@color/negro"
        android:text="Importante"
        android:textColor="@color/blanco"
        android:layout_weight="0.04"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/custom_button_cancel"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Cancelar"
            android:layout_weight="50"/>

        <Button
            android:id="@+id/custom_button_commit"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Enviar"
            android:layout_weight="50"/>
    </LinearLayout>


</LinearLayout>